<UserControl x:Class="Urho.Extensions.Wpf.UrhoSurface"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Urho.Extensions.Wpf"
			 xmlns:winForms="clr-namespace:Urho.Extensions.WinForms"
			 mc:Ignorable="d" Loaded="UserControl_Loaded"
			 d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<WindowsFormsHost Name="WindowsFormsHost">
			<WindowsFormsHost.Child>
				<winForms:UrhoSurface x:Name="WfUrhoSurface"/>
			</WindowsFormsHost.Child>
		</WindowsFormsHost>
	</Grid>
</UserControl>
